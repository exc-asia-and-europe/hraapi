<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">
    <main>
        <div class="row">
            <div class="col-sm-8">
                <div class="jumbotron">
                    <% include ../partials/annotations/annoImageElement %>
                </div>
            </div>

            <div class="col-sm-4">
                <div>Annotation Data</div>
                <div class="well">
                    <% include ../partials/annotations/annoDataElement %>
                </div>
            </div>

            <div class="col-sm-4">
                <div>Annotation Resources</div>
                <% for(key in annoResources){ %>
                <div class="well">
                    <h4><%= key %></h4>
                    <ul class="list-group">
                        <% annoResources[key].forEach(function(resource) { %>
                        <li class="list-group-item">
                            <div><%- resource.chars %></div>
                            <div style="font-size:9px;cursor:pointer;" onclick="$(this).children().first().toggle('fast');">toggle source code
                                <div style="display:none;">
                                    <textarea style="width:100%;min-height:100px;font-size:9px;white-space: pre;overflow-wrap: normal;overflow-x: scroll;" readonly="readonly"><%= resource.chars %></textarea>
                                </div>
                            </div>
                        </li>
                        <% }) %>
                    </ul>
                </div>
                <% } %>
            </div>
            <div class="col-sm-4">
                <div>full Annotation</div>
                <div class="well fullAnnotation">
                    <textarea style="width:100%;min-height:400px;font-size:9px;white-space: pre;overflow-wrap: normal;overflow-x: scroll;" readonly="readonly"><%= annotationData %></textarea>
                </div>
            </div>
        </div>
    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>
    
</body>
</html>